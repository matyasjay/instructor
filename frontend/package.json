{
  "name": "@instructor/frontend",
  "description": "Instructor - Personal VTA Frontend Web Application",
  "version": "1.0.0",
  "private": true,
  "main": "index.html",
  "type": "module",
  "scripts": {
    "prepare": "husky",
    "predev": "dotenvx run -f .env.local -- node scripts/validate-env.js",
    "dev": "dotenvx run -f .env.local -- vite",
    "prebuild": "dotenvx run -f .env.production --  node scripts/validate-env.js",
    "build": "tsc -b && dotenvx run -f .env.production -- vite build",
    "prestart": "dotenvx run -f .env.production -- node scripts/validate-env.js",
    "start": "dotenvx run -f .env.production -- vite",
    "deploy": "vercel build && vercel .",
    "env:decrypt": "sh scripts/decrypt.sh",
    "env:encrypt": "sh scripts/encrypt.sh",
    "lint": "prettier --check . && eslint .",
    "lint:fix": "prettier --write . && eslint . --fix",
    "test": "pnpm test:unit",
    "test:unit": "dotenvx run environment/0_test -- vitest run",
    "test:unit:watch": "dotenvx run environment/0_test -- vitest watch",
    "test:unit:coverage": "dotenvx run environment/0_test -- vitest run --coverage"
  },
  "dependencies": {
    "@tanstack/react-query": "^5.77.0",
    "axios": "^1.9.0",
    "dompurify": "^3.2.6",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "react-router": "^7.6.0",
    "react-router-dom": "^7.6.0",
    "tailwind-merge": "^3.3.0",
    "vercel": "^42.1.1"
  },
  "devDependencies": {
    "@dotenvx/dotenvx": "^1.44.1",
    "@eslint/js": "^9.27.0",
    "@tailwindcss/postcss": "^4.1.7",
    "@tanstack/react-query-devtools": "^5.77.0",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/jsdom": "^21.1.7",
    "@types/node": "^22.15.21",
    "@types/react": "^19.1.5",
    "@types/react-dom": "^19.1.5",
    "@typescript-eslint/eslint-plugin": "^8.32.1",
    "@typescript-eslint/parser": "^8.32.1",
    "@vitejs/plugin-react": "^4.5.0",
    "@vitejs/plugin-react-swc": "^3.10.0",
    "@vitest/coverage-v8": "^3.1.4",
    "autoprefixer": "^10.4.21",
    "eslint": "^9.27.0",
    "eslint-config-prettier": "^10.1.5",
    "eslint-plugin-import": "^2.31.0",
    "eslint-plugin-jest-dom": "^5.5.0",
    "eslint-plugin-jsx-a11y": "^6.10.2",
    "eslint-plugin-prettier": "^5.4.0",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-tailwindcss": "^3.18.0",
    "eslint-plugin-testing-library": "^7.2.1",
    "globals": "^16.1.0",
    "history": "^5.3.0",
    "jsdom": "^26.1.0",
    "postcss": "^8.5.3",
    "prettier": "^3.5.3",
    "tailwindcss": "^4.1.7",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.32.1",
    "vite": "^6.3.5",
    "vite-plugin-svgr": "^4.3.0",
    "vite-tsconfig-paths": "^5.1.4",
    "vitest": "^3.1.4"
  },
  "browserlist": [
    "Chrome >= 87",
    "Firefox >= 78",
    "Safari >= 14",
    "Edge >= 88"
  ]
}
